# Base environment configuration (360Â° coverage)
STAGE=dev
NODE_VERSION=22
NEXT_VERSION=15
NEXT_RUNTIME=edge

# Secrets
AUTH_SECRET=your-random-secret-here

# Persistence
POSTGRES_URL=postgresql://user:password@host:5432/ai_ysh
REDIS_URL=redis://user:password@host:6379
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# AI Gateway & Providers
AI_GATEWAY_API_KEY=your-ai-gateway-key
DEFAULT_MODEL=grok-3-mini-beta
FALLBACK_MODELS=gpt-4.1-mini,claude-3.5-sonnet
XAI_API_KEY=your-xai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=qwen3:30b

# Load balancer & performance
LOAD_BALANCER_COST_WEIGHT=30
LOAD_BALANCER_LATENCY_WEIGHT=40
LOAD_BALANCER_RELIABILITY_WEIGHT=30
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_METRICS_RETENTION_HOURS=168
PERFORMANCE_ALERT_THRESHOLD_LATENCY=5000
PERFORMANCE_ALERT_THRESHOLD_ERROR_RATE=0.05
PROVIDER_PRIORITY_ORDER=xai,ollama,anthropic,openai,google
MAX_COST_PER_REQUEST=0.10
MAX_LATENCY_MS=10000
PROVIDER_TIMEOUT_MS=30000

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key

# Bus & Channels
BUS_KIND=redis
BUS_URL=redis://user:password@host:6379
WHATSAPP_MCP_API_KEY=your-whatsapp-key
TELEGRAM_BOT_TOKEN=your-telegram-token
EMAIL_SMTP_URL=smtp://user:pass@host:587
SMS_PROVIDER_TOKEN=your-sms-token
VOICE_PROVIDER_TOKEN=your-voice-token
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Quotas & Feature Gates
DAILY_LIMIT_GUEST=20
DAILY_LIMIT_REGULAR=100
OWNER_WIZARD_ENABLED=true
OWNER_BATCH_ENABLED=false
INTEGRATOR_ADVANCED_ENABLED=true
INTEGRATOR_BATCH_ENABLED=true
